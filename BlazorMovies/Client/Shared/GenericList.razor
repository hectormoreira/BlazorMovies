@typeparam Titem

@if (List == null)
{
    @if (Loading is null)
    {
        <p>Loading null...</p>
    }
    else
    {
        @Loading
    }
}
else if (List.Count == 0)
{
    @if (Empty is null)
    {
        <p>No hay registros para mostrar. Null</p>
    }
    else
    {
        @Empty
    }
}
else
{
    @foreach (var element in List)
    {
        @HasItems(element)
    }

}

@code {
    [Parameter]
    public RenderFragment Loading { get; set; } = null!;

    [Parameter]
    public RenderFragment Empty { get; set; } = null!;

    [Parameter]
    public RenderFragment<Titem> HasItems { get; set; } = null!;

    [Parameter]
    [EditorRequired]
    public List<Titem> List { get; set; } = null!;
}
